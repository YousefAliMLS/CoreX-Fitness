@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Inventory Management System</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-success mt-4">
            <h4>Hello, @User.Identity.Name!</h4>
            <p>You are successfully logged in.</p>
        </div>

        <div class="mt-4">
            <a asp-action="Index" asp-controller="Products" class="btn btn-primary btn-lg">View Products</a>
            <a asp-action="Create" asp-controller="Products" class="btn btn-success btn-lg">Add New Product</a>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            <h4>Please log in to manage your inventory</h4>
            <p>Use the navigation menu to register or sign in.</p>
        </div>

        <div class="mt-4">
            <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-lg">Login</a>
            <a asp-action="Register" asp-controller="Account" class="btn btn-outline-primary btn-lg">Register</a>
        </div>
    }
</div>