@model ITI.Models.Products

@{
    ViewData["Title"] = "Delete Product";
}

<h1 class="alert alert-danger text-center">@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this product?</h3>

<div class="card">
    <div class="card-body">
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Category:</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Stock Quantity:</dt>
            <dd class="col-sm-9">@Model.stockQuantity</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>