@model IEnumerable<ITI.Models.Products>

@{
    ViewData["Title"] = "Products Inventory";
}

<h1 class="alert alert-success text-center">@ViewData["Title"]</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Product</a>
    </p>
}



<form method="get" asp-controller="Products" asp-action="Index" class="col-6">


    <div class="input-group">


        <input type="text" name="search" class="form-control" value="@ViewBag.CurrentSearch" />

        <button type="submit" class="btn btn-secondary"><i class="bi bi-search"></i></button>

    </div>




</form>



@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.stockQuantity</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No products found.</h4>
        <p>Start by adding some products to your inventory.</p>
    </div>
}