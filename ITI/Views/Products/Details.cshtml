@model ITI.Models.Products

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="alert alert-info text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Name</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Model.Category</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-4">Stock Quantity:</dt>
                    <dd class="col-sm-8">@Model.stockQuantity</dd>

                    <dt class="col-sm-4">Created By:</dt>
                    <dd class="col-sm-8">@Model.createByUserId</dd>

                    <dt class="col-sm-4">Last Updated:</dt>
                    <dd class="col-sm-8">@Model.lastUpdate</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>